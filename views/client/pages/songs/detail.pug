extend ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
    .singer-detail
        .container.my-3
            .row
                .col-12
                    .inner-title #{song.title}
                    .inner-actions
                        div(class="inner-action inner-time")
                            i(class="fa-regular fa-clock") #{singer.createdAt}
                        div(class="inner-action inner-singer")
                            i(class="fa-solid fa-microphone-lines") #{singer.fullName}
                        div(class="inner-action inner-topic")
                            i(class="fa-solid fa-music") #{topic.title}
                        div(class="inner-action inner-like" button-like=song.id)
                            i(class="fa-regular fa-thumbs-up") 
                            span #{song.like}
                        div(class="inner-action inner-heart")
                            i(class="fa-regular fa-heart") Bài hát yêu thích
                    .inner-play
                        .inner-avatar
                            img(src=song.avatar)
                    .inner-audio
                        audio(controls)
                            source(src="https://backend.daca.vn/assets/audios/cat-doi-noi-sau.mp3")
                    .inner-desc
                        .inner-label Description
                        .inner-text
                        | #{song.description}
                    .inner-desc
                        .inner-label Lyrics
                        .inner-text
                        | #{song.lyrics}