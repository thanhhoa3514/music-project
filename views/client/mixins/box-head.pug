mixin box-head(title,options = {})
    - 
        const defaultOptions = {
            iconClass: 'fas fa-heading',
            bgColor: '#007bff',
            textColor: 'white',
            borderRadius: '8px',
            padding: '15px 20px',
            fontSize: '1.5rem',
            shadowIntensity: '0.1'
        }
        const config = {...defaultOptions, ...options}

    .box-head(
        style=`
            background-color: ${config.bgColor};
            color: ${config.textColor};
            border-radius: ${config.borderRadius};
            padding: ${config.padding};
            box-shadow: 0 4px 6px rgba(0,0,0,${config.shadowIntensity});
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        `
        class="position-relative"
    )
        .box-head-icon(
            style=`
                margin-right: 15px;
                font-size: 2rem;
                color: rgba(255,255,255,0.7);
            `
        )
            i(class=config.iconClass)
        
        h2.inner-title(
            style=`
                margin: 0;
                font-size: ${config.fontSize};
                font-weight: 600;
            `
        ) #{title}
        
        .box-head-decoration(
            style=`
                position: absolute;
                right: 10px;
                top: 50%;
                transform: translateY(-50%);
                width: 10px;
                height: 10px;
                background-color: rgba(255,255,255,0.3);
                border-radius: 50%;
            `
        )